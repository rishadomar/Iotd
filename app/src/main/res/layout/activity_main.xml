<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button android:id="@+id/bGetListOfImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonGetListOfImages" />

    <Button android:id="@+id/bGetTodaysImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonGetTodaysImage" />

    <Button android:id="@+id/bViewImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonViewImage" />

    <Button android:id="@+id/bDeleteImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonDeleteImages" />
</LinearLayout>
